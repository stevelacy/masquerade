{
  "name": "app",
  "version": "0.0.1",
  "main": "client/index.js",
  "scripts": {
    "test": "NODE_ENV=testing mocha --compilers js:babel-core/register test/index.js 'test/**/*.js'",
    "lint": "eslint . ./",
    "start": "NODE_ENV=development nodemon --watch webpack.config.js --watch ./devserver --watch package.json --watch webpack/rules/ devserver.js",
    "compile": "npm run test && DEBUG=app:* NODE_ENV=production BUILD=TRUE ./node_modules/.bin/webpack --display-error-details",
    "deploy": "rm -rf dist && npm run compile && convox deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevelacy/app.git"
  },
  "private": true,
  "license": "none",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-csjs-postcss": "^0.3.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.25.0",
    "eslint": "^3.10.1",
    "eslint-config-rackt": "^1.1.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.7.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "glob-loader": "github:contra/glob-loader",
    "html-webpack-plugin": "^2.24.1",
    "immutability-helper": "^2.0.0",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.12.2",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.1.1",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-addons-pure-render-mixin": "^15.3.2",
    "react-addons-transition-group": "^15.3.2",
    "react-document-meta": "^2.0.3",
    "react-dom": "^15.3.2",
    "react-fix-it": "^0.2.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-immutable-proptypes": "^2.1.0",
    "react-map-gl": "1.7.2",
    "react-router": "4.0.0-alpha.6",
    "require-dir": "^0.3.1",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0-rc.0",
    "webpack-dev-server": "~2.1.0-beta.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "es2017",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "rackt",
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "__DEV__": true,
      "__PROD__": true,
      "__INITIAL_STATE__": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "rules": {
      "react/display-name": 1,
      "react/jsx-boolean-value": 1,
      "react/jsx-curly-spacing": 1,
      "react/jsx-equals-spacing": 1,
      "react/jsx-key": 1,
      "react/jsx-no-duplicate-props": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-pascal-case": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-danger": 1,
      "react/no-deprecated": 1,
      "react/no-did-update-set-state": 1,
      "react/no-direct-mutation-state": 1,
      "react/no-is-mounted": 1,
      "react/no-multi-comp": 1,
      "react/no-string-refs": 1,
      "react/no-unknown-property": 1,
      "react/prefer-es6-class": 1,
      "react/prop-types": 1,
      "react/react-in-jsx-scope": 1,
      "react/require-extension": 1,
      "react/self-closing-comp": 1,
      "react/sort-comp": 1,
      "react/wrap-multilines": 1,
      "no-console": 0,
      "jsx-quotes": 0,
      "space-before-function-paren": 0,
      "array-bracket-spacing": 0,
      "object-curly-spacing": 0,
      "semi": [
        2,
        "never"
      ]
    }
  }
}
